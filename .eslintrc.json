{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "eqeqeq": "warn",
    "prefer-const": "error",
    "no-lonely-if": "error",
    "no-var": "error"
  }
}
